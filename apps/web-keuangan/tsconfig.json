{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@alizzah/db": [
        "../../packages/db/src"
      ],
      "@alizzah/api": [
        "../../apps/api/src"
      ],
      "@alizzah/shared": [
        "../../packages/shared/src"
      ],
      "@alizzah/validators": [
        "../../packages/validators/src"
      ]
    },
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}